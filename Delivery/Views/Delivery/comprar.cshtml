@model IEnumerable<Delivery.Models.Item>

@{
    ViewBag.Title = "comprar";
    Layout = "~/Views/Shared/_LayoutPrincipal.cshtml";
}

<section class="panel-primary">
    <section class="panel-heading">
        PROCESO DE COMPRA DE ARTICULOS
    </section>
    <section class="panel-body">
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.codigo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.descripcion)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.precio)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.cantidad)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.subtotal)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.foto)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.codigo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.descripcion)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.precio)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.cantidad)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.subtotal)
                    </td>
                    <td>
                        <img id="imgProPeq" src="@Url.Content(item.foto)" />
                    </td>
                    <td>
                        @Html.ActionLink("Eliminar", "eliminaItem", new { id = item.codigo }, new { @class = "btn btn-danger" })
                    </td>
                </tr>
            }

        </table>
        @Html.ActionLink("<== SEGUIR COMPRANDO", "carritoCompras", "", new { @class = "btn btn-success" })
        @Html.ActionLink("Pagar", "Final", null, new { @class = "btn btn-danger" })
    </section>
</section>
<section id="monto">
    @Html.Label("TOTAL A PAGAR S/") @(((decimal)(@ViewBag.total)).ToString("0.00"))
    
</section>
